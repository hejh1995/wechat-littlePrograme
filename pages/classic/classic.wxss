.container {
  /* 如果你认为一个元素就是100%的，就应该显示的设置它的宽度为100% */
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* 如果 row 排列，align-items 为center，就是垂直居中。 */
  /* 如果 column 排列， align-items 为center， 就是水平居中了。 */
}
.header {
  width: 100%;
  display: flex;
  /* 默认 flex 是横轴排列的 */
  /* 平均分配空间 */
  justify-content:space-between;
  height: 100rpx;
  /* 垂直居中 */
  align-items: center;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5f5;
}
