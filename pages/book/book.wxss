/* pages/book/book.wxss */
.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.header {
  position: fixed;
  background-color: #ffffff;
  width: 100%;
  height: 100rpx;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  box-shadow: 0 0 3px 0 #e3e3e3;
  z-index: 99;
  display: flex;
  justify-content: center;
  align-items: center;
}
.box {
  background-color: #f5f5f5;
  border-radius: 50px;
  height: 68rpx;
  width: 700rpx;
  color: #999;
  display: flex;
  justify-content: center;
  align-items: center;
}
.box image {
  width: 14px;
  height: 14px;
  margin-right: 20rpx;
}
.sub-container {
  background-color: #f5f5f5;
  margin-top: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.head-img {
  width: 106rpx;
  height: 34rpx;
  margin-top: 40rpx;
}
.books-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 90rpx;
  margin-top: 10rpx;
}
.books-container v-book {
  margin-bottom: 10rpx;
}