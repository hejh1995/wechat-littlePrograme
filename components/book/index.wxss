/* components/book/index.wxss */
.container {
  margin-top: 30rpx;
  position: relative;
  box-shadow: 2px 2px 3px #e3e3e3;
  width: 240rpx;
  height: 360rpx;
}
.container image {
  width: 100%;
  height: 100%;
  border-radius: 2px;
}
.description {
  width: 216rpx;
  padding: 5rpx 10rpx 8rpx 15rpx;
  position: absolute;
  bottom: 0;
  background-color: #fff;
  font-size: 24rpx;
  border-bottom-right-radius: 2px;
  border-bottom-left-radius: 2px;
  display: flex;
  flex-direction: column;
}
.title {
  margin-top: 10rpx;
  overflow: hidden;
  /* text-overflow: ellipsis 使用省略符号代表被修剪的文本 */
  text-overflow: ellipsis;
  white-space: nowrap;
}
.author {
  font-size: 20rpx;
  color: #999;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.foot {
  font-size: 20rpx;
  display: flex;
  justify-content: flex-end;
  color: #666666;
}