/* components/epsoide/index.wxss */
.container {
  display: flex;
  height: 60rpx;
}
.index-container {
  display: flex;
  align-items: baseline;
}
.date-container {
  display: flex;
  flex-direction: column;
  margin-top: 6rpx;
}
.index {
  font-size: 60rpx;
  line-height: 60rpx;
  font-weight: 800;
  margin-right: 14rpx;
}
.line {
  height: 44rpx;
  margin-right: 14rpx;
  border-right: 1px solid #000;
}
.month {
  font-size: 24rpx;
  line-height: 24rpx;
}
.year {
  font-size: 20rpx;
}